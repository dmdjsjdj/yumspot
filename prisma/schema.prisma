generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model reviews {
  id              BigInt   @id @default(autoincrement())
  username        String
  title           String
  created_at      DateTime @default(now()) @db.Timestamptz(6)
  restaurant_name String
  address         String?
  rating          Decimal? @db.Decimal(2, 1)
  content         String?
  image_url       String?
  foodcategory    String?
  regionnames     String?

  @@map("reviews")
}
